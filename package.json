{
  "name": "generator-node-next",
  "version": "0.0.5",
  "description": "Cool Node.js kickstart with Backpack, Babel, CI, Eslint, Snyk and more",
  "homepage": "https://github.com/sh7dm",
  "author": {
    "name": "sh7dm",
    "email": "d3dx12.xx@gmail.com",
    "url": "https://github.com/sh7dm/generator-node-next"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "node",
    "babel",
    "esnext",
    "yeoman-generator"
  ],
  "devDependencies": {
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "lint-staged": "^4.2.1",
    "nsp": "^3.2.1",
    "prettier": "^1.14.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "yeoman-generator": "^2.0.5",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/"
    ]
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "commit": "npx git-cz"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "sh7dm/generator-node-next",
  "license": "MIT"
}
