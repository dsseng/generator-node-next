{
  "name": "generator-node-next",
  "version": "0.1.1",
  "description": "Cool Node.js kickstart with Backpack, Babel, CI, Eslint, Snyk and more",
  "homepage": "https://github.com/sh7dm/generator-node-next",
  "author": {
    "name": "sh7dm",
    "email": "d3dx12.xx@gmail.com",
    "url": "https://github.com/sh7dm"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "node",
    "babel",
    "esnext",
    "yeoman-generator"
  ],
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.0.0",
    "jest": "^23.5.0",
    "lint-staged": "^10.2.5",
    "npm": "^6.4.1",
    "prettier": "^1.14.2",
    "release-it": "^10.0.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "yeoman-generator": "^3.1.1",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/"
    ]
  },
  "scripts": {
    "prepublish": "npm audit --fix",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "commit": "npx git-cz",
    "release": "release-it"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "sh7dm/generator-node-next",
  "license": "MIT"
}
