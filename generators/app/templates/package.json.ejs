{
	"name": "<%= name %>",
	"version": "0.0.0",
	"description": "<%= descr %>",
	"main": "src/index.js",
	"scripts": {
		"dev": "backpack",
    "test:lint": "eslint **/*.js",
    "test:safety": "snyk test",
		<% if (unit) { %>
			<% if (runner == "jest") { %>
				"test:unit": "jest",
			<% } else { %>
				"test:unit": "ava",
			<% } %>
		<% } %>
    "test": "yarn run test:lint; yarn run test:safety; <% if (unit) { %>yarn run test:unit <% } %>",
    "build": "backpack build",
    "prepublish": "yarn run test"
	},
	"author": "<%= author %>",
	"license": "MIT",
	"devDependencies": {
    <% if (unit && runner == "ava") { %>"ava": "^1.0.0-rc.2",<% } %>
		"@babel/core": "^7.0.0",
		"@babel/plugin-proposal-class-properties": "^7.0.0",
		"@babel/plugin-proposal-decorators": "^7.0.0",
		"@babel/plugin-proposal-export-namespace-from": "^7.0.0",
		"@babel/plugin-proposal-function-sent": "^7.0.0",
		"@babel/plugin-proposal-json-strings": "^7.0.0",
		"@babel/plugin-proposal-numeric-separator": "^7.0.0",
		"@babel/plugin-proposal-throw-expressions": "^7.0.0",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/plugin-syntax-import-meta": "^7.0.0",
		"@babel/preset-env": "^7.0.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-eslint": "^10.0.1",
    <% if (unit && runner == "jest") { %>"babel-jest": "^23.6.0",<% } %>
		<% if (minify) { %>"babel-preset-minify": "^0.5.0",<% } %>
		"backpack-core": "^0.8.3",
		"eslint": "^4.17.0",
    <% if (unit && runner == "jest") { %>"eslint-plugin-jest": "^22.1.2",
		"jest": "^23.6.0",<% } %>
		"snyk": "^1.116.0"
	}
}
