{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es5",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "es6", "es7", "dom", "dom.iterable"],
    "jsx": "react",
    "rootDirs": ["src", "test"],
    "strict": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "declarations.d.ts",
    "jest.config.js"
  ],
  "exclude": ["dist", "examples", "node_modules"],
  "types": ["node"],
  "typeRoots": ["node_modules/@types"]
}
